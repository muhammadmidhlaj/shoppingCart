<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>

      <table class="table mt-5">
        <thead>

          <tr>
            <th scope="col">NO</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>

        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}} </td>
            <td>{{this.Category}} </td>
            <td>{{this.Description}} </td>
            <td>{{this.Price}} </td>
            <td><img style="width: 50px; height: 50px;" src="/product-image/{{this._id}}.jpg" alt=""></td>

            <td>{{this.Action}}
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            </td>
            <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                onclick="return confirm ('Are you sure..!  you want to delete{{this.Name}}?')">Delete</a></td>
          </tr>

          {{/each}}
        </tbody>
      </table>
    

    </div>
  </div>

</section>